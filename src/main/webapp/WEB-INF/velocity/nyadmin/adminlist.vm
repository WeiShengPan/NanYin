#set($pageJS='
<script>
    $(".sidebar-menu li.treeview>a:contains(后台账户管理)").parent().addClass("active");
    $("#submit").click(function(){
        $("input:checkbox").each(function(){
            if(this.checked==false){
                this.value=0
                this.checked=true;
            }
        });
    });
</script>
')
<section class="content-header">
    <h1>
        后台账户管理
        <small>后台账户管理</small>
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">后台账户列表</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>账号名</th>
                            <th>真实姓名</th>
                            <th>最近登录时间</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach(${admin}in ${adminList})
                            <tr>
                                <td>$!{admin.adminName}</td>
                                <td>$!{admin.name}</td>
                                <td>$!{admin.lastLoginDate}</td>
                                <td>
                                    <a href="admineditpage?id=$admin.id" class="btn btn-primary">修改 </a>&nbsp<a href="admindelete?id=$admin.id" class="btn btn-danger">删除 </a>
                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">添加后台账户</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form action="/nyadmin/adminadd" method="post">
                        <!-- 账号名 -->
                        <div class="form-group">
                            <label>账号名</label>
                            <input type="text" name="adminName" class="form-control" placeholder="Enter ..." required/>
                        </div>
                        <!-- 密码 -->
                        <div class="form-group">
                            <label>密码</label>
                            <input type="password" name="password" class="form-control" placeholder="Enter ..." required/>
                        </div>
                        <!-- 真实姓名 -->
                        <div class="form-group">
                            <label>真实姓名</label>
                            <input type="text" name="name" class="form-control" placeholder="Enter ..." />
                        </div>
                        <!-- 权限 -->
                        <div class="form-group">
                            <label>权限</label>
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="permission" value="1"/>
                                            账户管理
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="permission" value="1"/>
                                            用户管理
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="permission" value="1"/>
                                            新闻管理
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="permission" value="1"/>
                                            社团管理
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="permission" value="1"/>
                                            商城管理
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="permission" value="1"/>
                                            图文乐谱
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="permission" value="1"/>
                                            影音管理
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="checkbox">
                                        <label>
                                            <input type="checkbox" name="permission" value="1"/>
                                            教学中心
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="box-footer">
                            <button type="submit" id="submit" class="btn btn-primary">提交</button>
                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div><!-- /.col -->
    </div><!-- /.row -->
</section><!-- /.content -->