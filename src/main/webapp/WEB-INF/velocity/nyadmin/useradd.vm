<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html">
<head>
    <title>用户管理</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    #include("nyadmin/_globalCSS.vm")
</head>
<body class="skin-blue sidebar-mini">
<div class="wrapper">
    #include("nyadmin/_header.vm")
    #include("nyadmin/_side.vm")
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                用户管理
                <small>添加用户</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                <li><a href="#">Tables</a></li>
                <li class="active">Data tables</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    <div class="box box-info">
                        <div class="box-header">
                            <!-- tools box -->
                            <div class="pull-right box-tools">
                                <button class="btn btn-info btn-sm" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                                <button class="btn btn-info btn-sm" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                            </div><!-- /. tools -->
                        </div><!-- /.box-header -->
                        <div class="box-body pad">
                            <form>
                                <!-- 用户名 -->
                                <div class="form-group">
                                    <label>用户名</label>
                                    <input type="text" class="form-control" placeholder="Enter ..." />
                                </div>
                                <!-- 密码 -->
                                <div class="form-group">
                                    <label>密码</label>
                                    <input type="text" class="form-control" placeholder="Enter ..." />
                                </div>
                                <!-- 姓名 -->
                                <div class="form-group">
                                    <label>姓名</label>
                                    <input type="text" class="form-control" placeholder="Enter ..." />
                                </div>
                                <!-- 性别 -->
                                <div class="form-group">
                                    <label>性别</label>
                                    <select class="form-control">
                                        <option>先生</option>
                                        <option>女士</option>
                                    </select>
                                </div>
                                <!-- 联系电话 -->
                                <div class="form-group">
                                    <label>联系电话</label>
                                    <input type="text" class="form-control" placeholder="Enter ..." />
                                </div>
                                <!-- 地区 -->
                                <div class="form-group">
                                    <label>原籍地</label>
                                    <select class="form-control">
                                        <option>大陆</option>
                                        <option>option 2</option>
                                        <option>option 3</option>
                                        <option>option 4</option>
                                        <option>option 5</option>
                                    </select>
                                </div>
                                <!-- 现居地 -->
                                <div class="form-group">
                                    <label>现居地</label>
                                    <input type="text" class="form-control" placeholder="Enter ..." />
                                </div>
                                <!-- Email -->
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" class="form-control" placeholder="Enter ..." />
                                </div>
                                <!-- QQ或MSN -->
                                <div class="form-group">
                                    <label>QQ或MSN</label>
                                    <input type="text" class="form-control" placeholder="Enter ..." />
                                </div>
                                <!-- 密保问题 -->
                                <div class="form-group">
                                    <label>密保问题</label>
                                    <input type="text" class="form-control" placeholder="Enter ..." />
                                </div>
                                <!-- 密保答案 -->
                                <div class="form-group">
                                    <label>密保答案</label>
                                    <input type="text" class="form-control" placeholder="Enter ..." />
                                </div>
                                <!-- 是否参加社团 -->
                                <div class="form-group">
                                    <label>参加参加南音社、文艺团体吗？</label>
                                    <select class="form-control">
                                        <option>否</option>
                                        <option>是</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>如果是，请填写社团名</label>
                                    <input type="text" class="form-control" placeholder="Enter ..." />
                                </div>
                                <!-- 是否成为志工 -->
                                <div class="form-group">
                                    <label>愿意成为南音网志工吗？</label>
                                    <select class="form-control">
                                        <option>否</option>
                                        <option>是</option>
                                    </select>
                                </div>
                                <!--专长-->
                                <label>专长</label>
                                <textarea id="editor1" name="editor1" rows="10" cols="80">
                                 </textarea>
                                <!-- 用户级别 -->
                                <div class="form-group">
                                    <label>用户级别</label>
                                    <select class="form-control">
                                        <option>普通会员</option>
                                        <option>合格会员</option>
                                        <option>赞助会员</option>
                                    </select>
                                </div>
                            </form>
                        </div>
                    </div><!-- /.box -->
                </div><!-- /.col-->
            </div><!-- ./row -->
        </section><!-- /.content -->

    </div><!-- /.content-wrapper -->

    #include("nyadmin/_footer.vm")

</div><!-- ./wrapper -->

    #include("nyadmin/_globalJS.vm")
</div><!-- ./wrapper -->
</body>
</html>
