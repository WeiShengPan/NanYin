#set($pageJS='
<script>
    $(".sidebar-menu li.treeview>a:contains(图文乐谱)").parent().addClass("active");
</script>')
<section class="content-header">
    <h1>
        图文管理
        <small>类别管理</small>
    </h1>

</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">类别列表</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="col-md-2">级别</th>
                            <th class="col-md-4">名称</th>
                            <th class="col-md-4">上级类</th>
                            <th class="col-md-2">操作</th>
                        </tr>
                        </thead>
                        <tbody>

                            #foreach($bookSort in $bookSortList)
                                #if($bookSort.id!=1)
                                <tr>
                                    <td>$bookSort.level</td>
                                    <td>$bookSort.name</td>
                                    <td>$!bookSort.upperBookSort.name</td>
                                    <td><a href="articlesorteditpage?id=$bookSort.id" class="btn btn-primary">修改 </a>&nbsp<a href="articlesortdelete?id=$bookSort.id" class="btn btn-danger">删除</a></td>
                                </tr>
                                #end
                            #end

                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">添加类别</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form action="/nyadmin/articlesortadd" method="post">
                        <!-- 类别 -->
                        <div class="form-group">
                            <label>上级类别</label>
                            <select name="upperBookSort.id" class="form-control">
                                #foreach($bookSort in $bookSortList)
                                    <option value="$bookSort.id">$bookSort.name</option>
                                #end

                            </select>
                        </div>
                        <!-- 标题 -->
                        <div class="form-group">
                            <label>类别名称</label>
                            <input type="text" name="name" class="form-control" placeholder="Enter ..." required/>
                        </div>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

