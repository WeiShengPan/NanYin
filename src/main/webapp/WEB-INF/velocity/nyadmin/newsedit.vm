#set($pageJS='
<script>
$(document).ready(function(){
    $(".sidebar-menu li.treeview>a:contains(新闻管理)").parent().addClass("active");
        $(function () {
        // instance, using default configuration.
        CKEDITOR.replace("editor1",{ filebrowserUploadUrl : "/nyadmin/ckeditornewsimage"});
        //bootstrap WYSIHTML5 - text editor
        $(".textarea").wysihtml5();
    });
     $("#submit").click(function () {
        $("#news-form").submit();
    });
    $("#upload-form").submit(function () {
        var formData = new FormData(this);
        $.ajax({
            url: "/nyadmin/newsimage",
            type: "POST",
            dataType: "json",
            data: formData,
            processData: false,  // tell jQuery not to process the data
            contentType: false,  // tell jQuery not to set contentType
            success: function (data) {
                if (data.result == "success") {
                    $("#news-form input[name=\"file\"]").val(data.fileName);
                }
                alert(data.message);
            }
        });
        return false;
    });
});
</script>')
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        新闻管理
        <small>修改文章</small>
    </h1>

</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <br>
                <!-- /.box-header -->
                <div class="box-body pad">
                    <form id="news-form" action="/nyadmin/newsedit" method="post">
                        <div>
                            <!-- 类别 -->
                            <div class="form-group col-md-6">
                                <label>选择类别</label>
                                <select name="newsSort.id" class="form-control">
                                    #foreach($newsSort in $newsSortList)
                                        #if($newsSort.id!=1)
                                            <option value="$newsSort.id">$newsSort.name</option>
                                        #end
                                    #end
                                </select>
                            </div>
                            <!-- 标题 -->
                            <div class="form-group col-md-6">

                                <label>标题</label>
                                <input type="text" name="title" class="form-control" value="$!news.title" type="text"
                                       required/>

                            </div>
                        </div>
                        <div>
                            <!-- 作者 -->
                            <div class="form-group col-md-6">
                                <label>作者</label>
                                <input type="text" name="author" class="form-control" value="$!news.author" type="text"
                                       required/>
                            </div>
                            <!-- 来源 -->
                            <div class="form-group col-md-6">
                                <label>来源</label>
                                <input type="text" name="source" class="form-control" value="$!news.source"/>
                            </div>
                        </div>
                        <!--内容-->
                        <label>详细内容</label>
                        <textarea id="editor1" name="content" rows="10" cols="80" required>
                            $!news.content
                        </textarea>

                        <div>
                            <input type="hidden" name="id" value="$!news.id">
                        </div>
                        <input type="hidden" name="file" value="$!news.file" required>
                    </form>
                    </br>
                    <form id="upload-form" role="form" enctype="multipart/form-data" action="/nyadmin/newsimage"
                          method="post">
                        <div class="form-group">
                            <label for="exampleInputFile">上传新闻缩略图</label>
                            <input type="file" name="file" id="exampleInputFile" value="$!news.file">
                            <br>
                            <input id="uploadimage" type="submit" value="上传" class="btn btn-danger">

                            <p class="help-block">只有上传缩略图，前台才能显示图片新闻</p>
                        </div>
                    </form>
                    <div class="box-footer">
                        <button id="submit" type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col-->
    </div>
    <!-- ./row -->
</section><!-- /.content -->
