#set($pageJS='
<script>
    $(".sidebar-menu li.treeview>a:contains(新闻管理)").parent().addClass("active");
</script>')
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        新闻管理
        <small>修改文章</small>
    </h1>

</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <br>
                <!-- /.box-header -->
                <div class="box-body pad">
                    <form action="/nyadmin/newsedit" method="post">
                        <!-- 类别 -->
                        <div class="form-group">
                            <label>选择类别</label>
                            <select name="newsSort.id" class="form-control">
                                #foreach($newsSort in $newsSortList)
                                    #if($newsSort.id!=1)
                                        <option value="$newsSort.id">$newsSort.name</option>
                                    #end
                                #end
                            </select>
                        </div>
                        <!-- 标题 -->
                        <div class="form-group">
                            <label>标题</label>
                            <input type="text" name="title" class="form-control" value="$!news.title" type="text"
                                   required/>
                        </div>
                        <!-- 作者 -->
                        <div class="form-group">
                            <label>作者</label>
                            <input type="text" name="author" class="form-control" value="$!news.author" type="text"
                                   required/>
                        </div>
                        <!-- 来源 -->
                        <div class="form-group">
                            <label>来源</label>
                            <input type="text" name="source" class="form-control" value="$!news.source"/>
                        </div>
                        <!--内容-->
                        <label>详细内容</label>
                                <textarea id="editor1" name="content" rows="10" cols="80" required>
                                    $!news.content
                                </textarea>
                        <!--新闻缩略图-->
                        </br>
                        <div class="form-group">
                            <label for="exampleInputFile">上传新闻缩略图</label>
                            <input type="file" name="image" id="exampleInputFile" value="$!news.image">

                            <p class="help-block">只有上传缩略图，前台才能显示图片新闻，缩略图大小为168*126</p>
                        </div>
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                        <div>
                            <input type="hidden" name="id" value="$!news.id">
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col-->
    </div>
    <!-- ./row -->
</section><!-- /.content -->
