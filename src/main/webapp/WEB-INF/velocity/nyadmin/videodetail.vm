
<section class="content-header">
    <h1>
        教学中心
        <small>曲目管理</small>
    </h1>

</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">曲目别列表</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>名称</th>
                            <th>播放地址</th>
                            <th>添加时间</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>

                            #foreach($videoDetail in $videoDetailList)
                                <tr>
                                    <td>$videoDetail.title</td>
                                    <td>$!videoDetail.url</td>
                                    <td>$!videoDetail.addDate</td>
                                    <td><a href="videodetaileditpage?id=$videoDetail.id">修改 </a><a href="videodetaildelete?id=$videoDetail.id">删除</a></td>
                                </tr>
                                #end


                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">添加类别</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form action="/nyadmin/videodetailadd" method="post">
                        <!-- 类别 -->
                        <div class="form-group">
                            <label>上级类别</label>
                            <select name="video.id" class="form-control">
                                <option selected="selected" value="$!video.id">$!video.title</option>
                            </select>
                        </div>
                        <!-- 标题 -->
                        <div class="form-group">
                            <label>曲目名称</label>
                            <input type="text" name="title" class="form-control" placeholder="Enter ..." required/>
                        </div>
                        <!-- 指导老师 -->
                        <div class="form-group">
                            <label>指导老师</label>
                            <input type="text" name="teacher" class="form-control" placeholder="Enter ..." />
                        </div>
                        <!-- 来源 -->
                        <div class="form-group">
                            <label>来源</label>
                            <input type="text" name="source" class="form-control" placeholder="Enter ..." />
                        </div>
                        <!-- 摄制 -->
                        <div class="form-group">
                            <label>摄制</label>
                            <input type="text" name="editor" class="form-control" placeholder="Enter ..." />
                        </div>
                        <!-- 备注 -->
                        <div class="form-group">
                            <label>备注</label>
                            <input type="text" name="remark" class="form-control" placeholder="Enter ..." />
                        </div>
                        <!-- 播放地址 -->
                        <div class="form-group">
                            <label>播放地址</label>
                            <input type="text" name="url" class="form-control" placeholder="Enter ..." required/>
                        </div>

                        <!--内容-->
                        <label>详细内容</label>
                                <textarea id="editor1" name="content" rows="10" cols="80" >
                                 </textarea>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

